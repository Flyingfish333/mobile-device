<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="3"
    android:columnCount="2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mode_selection_radiobox_label"
        android:text="Travel Mode: "
        android:layout_column="0"
        android:layout_row="0">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/directions_info_distance_label"
        android:text="Total Distance: "
        android:layout_column="0"
        android:layout_row="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/directions_info_distance"
        android:layout_column="1"
        android:layout_row="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/directions_info_duration_label"
        android:text="Total Duration: "
        android:layout_column="0"
        android:layout_row="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/directions_info_duration"
        android:layout_column="1"
        android:layout_row="2"/>

</GridLayout>